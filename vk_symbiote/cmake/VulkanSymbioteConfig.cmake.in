@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

# Find required dependencies
find_dependency(Vulkan REQUIRED)

# Optional dependencies
if(@USE_VMA@)
    find_dependency(VulkanMemoryAllocator QUIET)
    if(VulkanMemoryAllocator_FOUND)
        set(VK_SYMBIOTE_USE_VMA TRUE)
    endif()
endif()

# Include targets
include("${CMAKE_CURRENT_LIST_DIR}/VulkanSymbioteTargets.cmake")

# Set variables for users
set(VK_SYMBIOTE_VERSION @PROJECT_VERSION@)
set(VK_SYMBIOTE_FOUND TRUE)

# Check if all required dependencies were found
check_required_components(VulkanSymbiote)